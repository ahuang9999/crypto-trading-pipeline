name: C/C++ CI

on:
  push:
    branches: [ "ahuang9999-actions" ]
  pull_request:
    branches: [ "ahuang9999-actions" ]

jobs:
  build:

    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v4
    - name: configure
      run: ./configure
    - name: make
      run: make
    - name: make check
      run: make check
    - name: make distcheck
      run: make distcheck
